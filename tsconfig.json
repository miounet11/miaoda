{
  "extends": "@electron-toolkit/tsconfig/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/src/*"],
      "@main/*": ["src/main/*"],
      "@renderer/*": ["src/renderer/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": [
    "src/main/**/*.ts",
    "src/renderer/**/*.ts",
    "src/renderer/**/*.tsx",
    "src/renderer/**/*.vue",
    "src/renderer/**/*.d.ts",
    "src/preload/**/*.ts",
    "src/preload/**/*.d.ts",
    "src/types/**/*.ts",
    "src/test/**/*.ts",
    "electron.vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out",
    "src/**/__tests__/**/*",
    "src/main/performance/**/*",
    "src/renderer/src/services/voice/**/*",
    "src/renderer/src/services/export/**/*"
  ]
}
